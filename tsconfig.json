{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "skipLibCheck": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "rootDir": "",
    "sourceMap": false,
    "outDir": "dist"
  },
  "include": ["src/**/*", "client/src/common_files/**/*"]
}
