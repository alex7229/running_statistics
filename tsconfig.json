{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "types": ["node", "jest"],
    "rootDir": "",
    "sourceMap": false,
    "outDir": "dist"
  },
  "include": ["src/**/*", "client/src/common_files/**/*"]
}
